.mc-lbp
    color: rgba(black, 0.7)
    font-family: sans-serif
    font-size: 15px
    
    background: white
    
    .mc-lbp__block
        margin: 0
        padding: 8px 16px
        
        font-size: inherit
        white-space: nowrap
        
    .mc-lbp__spacer
        display: inline-block
        width: 1em
        
    .mc-lbp__bar
        display: inline-block
        padding: 0
        margin: 0 0.5em
        height: 1em
        width: 1px
        vertical-align: middle
        
        background: #ddd
    
    a
        display: inline-block
        
        color: #41738f
        text-decoration: none
        
        border: none
        background: none
        
        cursor: pointer
        
        &:hover
            text-decoration: underline
            
    input
        padding: 3px 5px

        color: inherit
        font-size: inherit
        font-family: inherit
        font-weight: inherit

        border: 1px solid #ddd
        
        &:focus
            outline: 1px solid #41738f