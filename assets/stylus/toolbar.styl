.mc-toolbar
    display: flex
    align-items: center
    position: fixed
    height: 50px
    width: 100%
    left: 0
    bottom: 0
    
    background: white
    box-shadow: 0 0 5px 0 rgba(black, 0.2)

.mc-toolbar__panel
    // nothing

.mc-toolbar__text
    padding: 0 10px
    
    color: rgba(black, 0.8)
    font-size: 15px
    font-family: "Helvetica", sans-serif
    
.mc-toolbar__line
    margin: 0
    height: 100%

    border: none
    border-left: 1px solid rgba(black, 0.3)

.mc-toolbar__button
    $size = 50px
    
    display: inline-block
    width: $size
    height: $size
    margin: 0
    padding: 10px

    border: none
    background: none
    cursor: pointer
    
    opacity: 0.9
    
    &:hover
        opacity: 1
        background: #ddd

.mc-toolbar__upload
    position: relative
    height: 100%
    padding: 0 10px
    
    .mc-toolbar__upload-box
        position: relative
        left: 0
        top: 40%
        height: 20%
        width: 200px
        
        border: 1px solid #ddd
        
    .mc-toolbar__upload-progress-bar
        position: absolute
        left: 0
        top: 0
        height: 100%
        width: 50%
        
        background: #50a3f8
        
        transition: width 5s