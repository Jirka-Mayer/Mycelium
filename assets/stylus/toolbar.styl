.mc-toolbar
    display: flex
    position: fixed
    height: 50px
    width: 100%
    left: 0
    bottom: 0
    
    background: white
    box-shadow: 0 0 5px 0 rgba(black, 0.2)
    
.mc-toolbar__panel
    border-right: 1px solid rgba(black, 0.3)

.mc-toolbar__button
    $size = 50px
    
    display: inline-block
    width: $size
    height: $size
    margin: 0

    border: none
    background: none
    cursor: pointer
    
    &:hover
        background: #ddd